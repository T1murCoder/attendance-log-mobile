<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

            <ImageButton
                android:layout_weight="1"
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background_gray"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/table_group_name_header"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageButton
                android:layout_weight="1"
                android:id="@+id/add_student"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/background_gray"
                android:src="@drawable/ic_student_add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:id="@+id/attendance_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Посещения"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:backgroundTint="@color/main_blue"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/points_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Баллы"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:backgroundTint="@color/main_blue"/>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_weight="1"
                            android:id="@+id/calendar_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/background_gray"
                            android:src="@drawable/ic_back2" />

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/date_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Календарь"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_regular"/>

                        <ImageButton
                            android:layout_weight="1"
                            android:id="@+id/calendar_forward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/background_gray"
                            android:src="@drawable/ic_forward" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginStart="60dp"
                        android:id="@+id/dates_rv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/students_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>

